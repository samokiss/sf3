{% extends 'base.html.twig' %}

{% block body %}
    <div class="row container center-align large-padding-top">

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <div class="col s8">
            <fieldset>
                <form action="{{ path('login') }}" method="POST" class="col s12">
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="text" name="_username" class="validate"
                                   id="username">
                            <label for="username">Nom d'utilisateur</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 offset-s3">
                            <input type="password" name="_password" class="validate"
                                   id="password">
                            <label for="password">Mot de passe</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default black">Se connecter</button>
                </form>
            </fieldset>
        </div>
    </div>
{% endblock %}